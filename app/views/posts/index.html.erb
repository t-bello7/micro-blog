<div>
    <img src=<%= @user.photo %> />
    <h1> <%= @user.name %>  </h1>
    <p> <%= @user.bio%> </p>
<div>

<% @posts.each_with_index do |post,index|%>
    <div>
        <h3> Post # <%= index + 1%> </h3>
        <p> <%= post.text %> </p>
        <div>
            <span>
                Comments: <%= post.comments_count%>
            </span>

            <span>
                Likes: <%= post.likes_count %>
            </span>
        <div>
    </div>
    <div>
    <% post.recent_comment.each do |comment,index|%>
        <span> <%= index%>  <%= comment.text%> </span>
    <% end %>

    </div>
<% end %>