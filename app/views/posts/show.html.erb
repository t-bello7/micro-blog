<div>
    <div class="d-flex justify-content-between shadow p-3 mb-5 bg-body rounded">
        Post <%= @post.id %> by <%= @post.author.name %>
        <div>
            <span>Comments: <%= @post.comments_count %> </span> <span> Likes: <%= @post.likes_count %> </span>
        </div>
    </div>

    <p class="shadow p-3 mb-5 bg-body rounded"> <%= @post.text%> </p>    
</div>

<div class="d-flex flex-column p-3 mb-5 bg-body rounded">
    <% @post.comments.each do |comment|%>
        <span> <%= comment.author.name %>: <%= comment.text%> </span>
    <% end %>
</div>